{
  "name": "lm-commons/lmc-user-repository",
  "type": "library",
  "description": "Lmc User Repository Common",
  "license": "MIT",
  "authors": [
    {
      "name": "Eric Richer",
      "email": "eric.richer@vistoconsulting.com"
    }
  ],
  "require": {
    "php": "~8.2.0 || ~8.3.0 || ~8.4.0",
    "lm-commons/lmc-authentication": "1.0.x-dev"
  },
  "require-dev": {
    "laminas/laminas-coding-standard": "^3.0",
    "phpunit/phpunit": "^11.5",
    "psalm/plugin-phpunit": "^0.19",
    "vimeo/psalm": "^6.0"
  },
  "autoload": {
    "psr-4": {
      "Lmc\\User\\Repository\\" : "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "LmcTest\\User\\Repository\\": "test/"
    }
  },
  "extra": {
    "laminas": {
      "config-provider": "Lmc\\User\\Repository\\ConfigProvider"
    }
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    },
    "platform": {
      "php": "8.2.99"
    }
  },
  "scripts": {
    "check": [
      "@cs-check",
      "@test"
    ],
    "test": "phpunit",
    "test-coverage": "phpunit --coverage-clover ./build/logs/clover.xml",
    "cs-check": "phpcs",
    "cs-fix": "phpcbf",
    "test-coverage-html": "phpunit --coverage-html ./build/html",
    "static-analysis": "psalm --shepherd --stats"
  },
  "repositories": [
    {
      "type": "git",
      "url": "c:/lm-commons/lmc-authentication"
    }
  ]
}
